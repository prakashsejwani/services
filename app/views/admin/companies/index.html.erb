<% title 'Companies' %>
<% content_for :sidebar do -%>
	<div class="sidebar_green">
		<h2>Approved companies</h2>
		<ul>
			<li><%= link_to "view only approved companies", companies_path%></li>			
		</ul>
	</div>
<% end -%>
<%#= render :partial => 'shared/slideshow' %>

<div>
	<h3>Companies</h3>

	<div class="clear2"></div>

	<% form_tag(admin_companies_path, :method => :get) do %>
	<div style="width:100%">
		<div style="float:left; width:30%"><span class="blue_link"><%= link_to 'create New company', new_admin_company_path %></span></div>
		<div style="float:right; width:69%; text-align:right">
			<%= text_field_tag :search, params[:search], :size => 35%>
			<%= submit_tag("Search", :name => nil, :url =>{:controller => 'companies', :action => 'index'}, :class=>"no-img") %>
		</div>
	</div>
	<%end%>
	
	<div class="clear2"></div>
	
	<%form_tag(admin_companies_path, :method=>:put)do%>	
		<%= render :partial => 'comp_info' %>
	<% end %>
    
	<div id="page_shift"><%= will_paginate @companies %></div>	
	<div class="clear2"></div>	
</div>