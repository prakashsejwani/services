<% title 'Users' %>

<% content_for :header do -%>
	<%= configatron.site_name %> Users
<% end -%>

<% content_for :sidebar do -%>
<div id="sidebar">
		<div class="sidebar_green">
			<ul>
				<li><%= link_to "All users", admin_users_url %></li>
				<li><%= link_to "Active users only", active_admin_users_url %></li>
				<li><%= link_to "Suspended users only", suspended_admin_users_url %></li>
				<li><%= link_to "Pending users only", pending_admin_users_url %></li>
				<li><%= link_to "Deleted users only", deleted_admin_users_url %></li>
			</ul>
		</div>
</div>
<% end -%>
<div>
	<table cellspacing="0">
	  <tr>
	  	<th>UserId</th>
			<th>Login</th>
			<th>Email</th>
			<th>Status</th>
			<!--<th>&nbsp;</th>-->
	  </tr>			
	<% # TODO: (base_app) Add some sort of search feature to easily find users %>
	<% for user in @users %>
	  <tr>
	  	<td><%=h user.id %></td>
			<td class="no-effects"><%= link_to h(user.login), admin_user_url(user) %></td>
			<td class="no-effects"><%=h user.email %></td>
			<td><%=h user.state %></td>
	    <!--<td><%= link_to 'Show', admin_user_url(user) %></td>-->
	  </tr>
	<% end %>
	</table>
	<div class="clear"></div>				
	<%= will_paginate @users %>
	<br/>
	<span class="blue_link"><%= link_to 'New user', new_admin_user_path %></span>
</div>

