<% title 'New User' %>
<% content_for :header do -%>
Create a new <%= configatron.site_name %> account
<% end -%>

<% content_for :sidebar do -%>
<div id="sidebar">
		<div>
			<p>	<strong>This account will not be activated by default!</strong></p>				
			<p>	The user will receive an email with activation instructions. If you want
				to activate the account, you can do this manually later.</p>
		</div>
</div>
<% end -%>
 <div><%= error_messages_for :user %></div>
		<div>
          <h3>New User</h3>
          <div class="clear"></div>
			<% form_for :user,:html => { :multipart => true }, :url => admin_users_path do |f| -%>
			  <table>
				<tr>
				  <td><label for="login">Login</label></td>
				  <td><%= f.text_field :login %></td>
				</tr>
				<tr>
				  <td><label for="email">Email</label></td>
				  <td><%= f.text_field :email %></td>
				</tr>
				<tr>
				  <td><label for="password">Password</label></td>
				  <td><%= f.password_field :password %></td>
				</tr>
				<tr>
				  <td><label for="password_confirmation">Confirm Password</label></td>
				  <td><%= f.password_field :password_confirmation %></td>
				</tr>
				<tr>
					<td><label for="Avatar">Avatar</label></td>
					<td><%= file_field :avatar, :uploaded_data, :class=>"border", :size => 20 %></td>	
				</tr>
				<tr>
				  <td colspan="2" align="right"><%= submit_tag 'Create', :class=>"button1" %></td>
				</tr>
				<tr><td colspan="2">&nbsp;</td></tr>
			  </table>
			<% end -%>
			<br/>
			<span class="blue_link"><%= link_to 'Back', admin_users_path %></span>
		</div>
