<% title @user.login %>
<% content_for :header do -%>
 	<%= configatron.site_name %> Account for <em><%=h @user.login %></em>
<% end -%>

<% content_for :sidebar do -%>
<div id="sidebar">
	<div class="sidebar_green">
		<h2>Account status: <%= @user.state.to_s.humanize %></h2>	
		
		<ul>
			<% if @user.pending? -%>
				<li><%= link_to "Activate", activate_admin_user_url(@user), :method => :put %></li>
				<li><%= link_to "Suspend", suspend_admin_user_url(@user), :method => :put %></li>
				<li><%= link_to "Delete", admin_user_url(@user), :method => :delete %></li>
			<% end -%>
			
			<% if @user.suspended? -%>
				<li><%= link_to "Unsuspend", unsuspend_admin_user_url(@user), :method => :put %></li>
			<% end -%>
		
			<% if @user.active? -%>
				<li><%= link_to "Suspend", suspend_admin_user_url(@user), :method => :put %></li>
				<li><%= link_to "Delete", admin_user_url(@user), :method => :delete, :confirm => "Are you sure you want to delete this account?" %></li>
			<% end -%>
			
			<% # TODO: Uncomment to enable user purging by the administrator %>			
			<%# if @user.deleted? -%>
				<!--<li> --><%#= link_to "Purge", purge_admin_user_url(@user), :method => :delete, :confirm => "Are you sure you want to remove this account, and all data associated with it from base_app?" %><!--</li> -->
			<%# end -%>
		   
		</ul>	
	</div>	
</div>
<% end -%>
<div>
	<h3><%=h(@user.login) %></h3>
	<table>
		<!-- <%# if @user.avatar %><tr><td colspan="2"><img src =<%#= @user.avatar.public_filename(:thumbnail) %> /></td></tr><%# end %> -->
		<tr><td colspan="2">&nbsp;</td></tr>
		<tr><td>Email </td><td class="no-effects"><%=mail_to h(@user.email)%></td></tr>
		<tr><td>password</td><td><%= "#{"*"*8} <small>#{link_to_if !@user.deleted?, "send new password", reset_password_admin_user_url(@user), :method => :put}</small>"%></td></tr>
		<tr><td colspan="2">&nbsp;</td></tr>
		<tr><td>account created</td><td><%=h @user.created_at.strftime("%d %b '%y") %></td></tr>
		<tr><td>last updated</td><td><%=h @user.updated_at.strftime("%d %b '%y") %></td></tr>
	</table>
	<br/>		
	<span class="blue_link"><%= link_to 'Edit', edit_profile_url(@user) %></span> 
	<span class="blue_link"><%= link_to 'Back', admin_users_path %></span>	
</div>
	

