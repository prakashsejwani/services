<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<title><%= configatron.site_name %> - <%= yield(:title) %></title>
	<%= stylesheet_link_tag 'admin','common', 'arya_style', :media => 'all' %>
  	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'swfobject'%>
</head>

<body>
	<div class="mainDiv">
	  <div class="headerHome"><!--Header Starts-->
          <div class="nav"></div>
		  <div class="logoDiv">
		    <%= render :partial => 'shared/global_links' %>
			<div class="logo">
				<img src="images/logo.gif" width="300" height="55" align="absbottom" />
			</div>
		  </div>
		  	<%= render :partial => 'shared/login' %>
			  <%= render :partial => 'shared/signup' %>  
	  	</div><!--Header Ends-->		
	     <div class="clear"></div>	
	  <!-- <div id="main">      -->
			
			<div class="content"><!--Content Starts-->
								   
				<!--<h2 class="head"><%#= yield_or_default yield(:header), "Use 'content_for :header do; end' in your view to set this title" %></h2>-->        
				<div class="leftDiv">
					<div>       
						 <% if flash[:notice] %>
							 <div id="notice"><%= flash[:notice] %></div>
						 <% end %>
					 	 <% if flash[:warning] %>
							 <div id="warning"><%= flash[:warning] %></div>
						 <% end %>
						 <% if flash[:error] %>
							 <div id="error"><%= flash[:error] %></div>
						 <% end %>		
					  <!--	<h2 class="head"><%= yield_or_default yield(:header), "Use 'content_for :header do; end' in your view to set this title" %></h2>-->
					  	<div id="screen"><%= yield %><br/></div>
					</div>
				</div><!-- left end -->
				 	  
		  <div class="rightDiv">
				<%= render :partial => 'admin/shared/tabs' %>
				<%= yield_or_default(yield(:sidebar)) %>
			</div><!-- right end -->		  
		</div><!-- content end -->			
	</div><!-- maindiv end -->
 			
</body>
</html>
