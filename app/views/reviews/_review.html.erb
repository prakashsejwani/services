<div id="reviews" :style = 'display:none'>
<% form_for([@company, @review] , :html => {:id =>'review_form'}) do |f| %>
  
<p>
   Name:
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
	<p>
    <b>Body</b><br />
    <%= f.text_area :comment , :rows => 3 , :cols => 35 %>
  </p>
  <p>
    <%= f.submit button_name %>
  </p>
<%end%>
</div>
