<% title 'Change Email Address' %>

<% content_for :header do -%>
	Change my email address
<% end -%>
<div id="people">
	<div id="screen_1">
	<br/>
	<% form_for :user, @user, :url => update_email_user_url(@user), :html => {:method => :put} do |f| %>

		<h3>Your new email address</h3>
		<div class="clear"></div>
		<p>Please enter your new email address below. Please double-check it, because you may need it later to retrieve your password.</p>
		<div class="clear"></div>
		<p><%= text_field_tag 'email', ''%></p>
		<div class="clear"></div>
		<p><%= submit_tag "Change" %> or <%= link_to "forget about it", profile_url(@user) %></p>
	
	<% end %>
	</div>
</div>
